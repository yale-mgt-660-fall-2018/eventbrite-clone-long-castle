<script>
document.querySelector('form').onsubmit = function() {
    let name = document.querySelector('input[name=title]');
    let error_box = document.querySelector('ul[class="form-errors"]');
    
    if (!name.value) {
        var li = document.createElement("li");
        li.appendChild(document.createTextNode('You must specify your event name'));
        error_box.appendChild(li);
        error_box.style = "display: inline;";
        name.focus();
        return false;
    }
    else if (name.value.length > 20) {
        var li = document.createElement("li");
        li.appendChild(document.createTextNode('Your event name is way too long. Try shorten it to fewer than 20 characters'));
        error_box.appendChild(li);
        error_box.style = "display: inline;";
        name.focus();
        return false;
    }
    
    let location = document.querySelector('input[name=location]');
    if (!location.value) {
        var li = document.createElement("li");
        li.appendChild(document.createTextNode('You must specify your event location'));
        error_box.appendChild(li);
        error_box.style = "display: inline;";
        location.focus();
        return false;
    }
    else if (location.value.length > 30) {
        var li = document.createElement("li");
        li.appendChild(document.createTextNode('Your event location is way too long. Try shorten it to fewer than 30 characters'));
        error_box.appendChild(li);
        error_box.style = "display: inline;";
        location.focus();
        return false;
    }
    
    let picture = document.querySelector('input[name=image]');
    if (!picture.value) {
        var li = document.createElement("li");
        li.appendChild(document.createTextNode('You must upload a picture for your event'));
        error_box.appendChild(li);
        error_box.style = "display: inline;";
        picture.focus();
        return false;
    } 
    /*    
    let startTime = document.querySelector('input[name=event_start_time]');
