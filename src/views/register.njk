        var li = document.createElement("li");
        li.appendChild(document.createTextNode('You must specify your event start time'));
        error_box.appendChild(li);
        error_box.style = "display: inline;";
        startTime.focus();
        return false;
    }
    */
    
    error_box.style = "display: none;";
    return true;
};
</script>