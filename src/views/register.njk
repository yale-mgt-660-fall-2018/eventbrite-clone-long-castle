        <p><h3>Create a new event using the form below!</h3><p>
        <p>
        <form action="/events/new" method="post">
            
            <div class="form-group">
                <label for="title">Title</label>
                <input autocomplete="off" autofocus class="form-control" name="title" id="title" placeholder="Event Name" type="text">
            </div>
            
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" name="location" id="location" placeholder="Event Location" type="text">
            </div>
            
            <label style="display: none; class="control-label">Event Start Time</label>
            <div style="display: none;" class='input-group date' id='datetimepicker1'>
                <input type='text' class="form-control" name = "event_start_time">
                    <span class="input-group-addon">
                         <span class="glyphicon glyphicon-calendar"></span>
                    </span>
            </div>       
            
            <div class="form-group">
                <label for="year">Year</label>
                <select class="form-control" name="year" id="year" type="text">
                    <option name="year" id="year">2018</option>
                    <option name="year" id="year">2019</option>
                </select>

                <label for="month">Month</label>
                <select class="form-control" name="month" id="month" type="text">
                    <option value="0" id="month">January</option>
                    <option value="1" id="month">February</option>
                    <option value="2" id="month">March</option>
                    <option value="3" id="month">April</option>
                    <option value="4" id="month">May</option>
                    <option value="5" id="month">June</option>
                    <option value="6" id="month">July</option>
                    <option value="7" id="month">August</option>
                    <option value="8" id="month">September</option>
                    <option value="9" id="month">October</option>
                    <option value="10" id="month">November</option>
                    <option value="11" id="month">December</option>
                </select>

                <label for="day">Day</label>
                <select class="form-control" name="day" id="day" type="text">
                    {% for i in range(1, 32) %}
                    <option name="day" value="{{i}}" id="day-{{i}}">{{i}}</option>
                    {% endfor %}
                </select>

                <label for="hour">Hour</label>
                <select class="form-control" name="hour" id="hour" type="text">
                    {% for i in range(0, 23) %}
                    <option name="hour" value="{{i}}" id="hour-{{i}}">{{i}}</option>
                    {% endfor %}
                </select>

                <label for="minute">Minute</label>
                <select class="form-control" name="minute" id="minute" type="text">
                    <option name="minute" value="0" id="minute-0">00</option>
                    <option name="minute" value="30" id="minute-30">30</option>
                </select>
            </div>
            
            
            
            <div class="form-group">
            <label for="image">Image</label>
            <input class="form-control" type="text" id="image" name="image">            
            </div>
            
            <button class="btn btn-primary" type="submit" name="submit">Create</button>
        </form>
    <ul style="display:none;" class="form-errors">
    </ul>
